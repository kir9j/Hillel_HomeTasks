<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="341*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="26.04" />
            <RowDefinition Height="70"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Content="Enter a number:" HorizontalAlignment="Left" Margin="92,-5,0,0" VerticalAlignment="Top" Height="26" Width="94" Grid.RowSpan="2" Grid.Column="2" />
        <TextBox x:Name="numberTextBox" Margin="19,16,82,0" VerticalAlignment="Top" Height="18" Grid.RowSpan="2" Grid.Column="2" />

        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left" Margin="45,35,0,11" Width="188" Grid.RowSpan="2" Grid.Column="2">
            <Button Content="sin(x)" Width="178" Margin="5" Click="SinButton_Click" Height="39" />
            <Button Content="cos(x)" Width="178" Margin="5" Click="CosButton_Click" Height="39" />
            <Button Content="x!" Width="178" Click="FactorialButton_Click" Height="39" />
        </StackPanel>

        <Label Content="Result:" HorizontalAlignment="Left" Margin="117,26,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="44" Grid.RowSpan="2" Grid.Column="2" />
        <TextBox x:Name="resultTextBox" Margin="21,17,80,0" VerticalAlignment="Top" Grid.Row="2" IsReadOnly="True" Height="18" Grid.Column="2" />
    </Grid>
</Window>
